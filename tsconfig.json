{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "rootDir": "./src",
      "outDir": "./build",
      "strictNullChecks": true,
      "allowUnreachableCode": false,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strict": true,
      "lib": ["es2015"],
      "composite": true,
      "declarationMap": true,
      "sourceMap": true,
      "baseUrl": "."
    },
    "references": [
      {
        "path": "./api"
      },
      {
        "path": "./queue-tasks"
      },
    ],
    "include": [
      "./api/src/**/*.d.ts",
      "./queue-tasks/src/**/*.d.ts",
    ],
    "exclude": [
      "node_modules",
      "*/dist/*",
      "*/build/*"
    ]
  }